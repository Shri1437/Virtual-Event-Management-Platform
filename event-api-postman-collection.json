{
  "info": {
    "name": "Event Management API",
    "description": "Postman collection for testing event management endpoints.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register Organizer",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {"mode": "raw", "raw": "{\n  \"username\": \"organizer1\",\n  \"password\": \"password123\",\n  \"email\": \"organizer1@example.com\",\n  \"role\": \"organizer\"\n}"},
        "url": {"raw": "http://localhost:3001/api/register", "protocol": "http", "host": ["localhost"], "port": "3001", "path": ["api", "register"]}
      }
    },
    {
      "name": "Register Attendee",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {"mode": "raw", "raw": "{\n  \"username\": \"attendee1\",\n  \"password\": \"password123\",\n  \"email\": \"attendee1@example.com\",\n  \"role\": \"attendee\"\n}"},
        "url": {"raw": "http://localhost:3001/api/register", "protocol": "http", "host": ["localhost"], "port": "3001", "path": ["api", "register"]}
      }
    },
    {
      "name": "Login Organizer",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {"mode": "raw", "raw": "{\n  \"username\": \"organizer1\",\n  \"password\": \"password123\"\n}"},
        "url": {"raw": "http://localhost:3001/api/login", "protocol": "http", "host": ["localhost"], "port": "3001", "path": ["api", "login"]}
      }
    },
    {
      "name": "Login Attendee",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {"mode": "raw", "raw": "{\n  \"username\": \"attendee1\",\n  \"password\": \"password123\"\n}"},
        "url": {"raw": "http://localhost:3001/api/login", "protocol": "http", "host": ["localhost"], "port": "3001", "path": ["api", "login"]}
      }
    },
    {
      "name": "Create Event (Organizer Only)",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer {{organizer_token}}"}
        ],
        "body": {"mode": "raw", "raw": "{\n  \"date\": \"2025-10-01\",\n  \"time\": \"18:00\",\n  \"description\": \"Virtual Tech Meetup\"\n}"},
        "url": {"raw": "http://localhost:3001/api/events", "protocol": "http", "host": ["localhost"], "port": "3001", "path": ["api", "events"]}
      }
    },
    {
      "name": "Get All Events",
      "request": {
        "method": "GET",
        "header": [{"key": "Authorization", "value": "Bearer {{organizer_token}}"}],
        "url": {"raw": "http://localhost:3001/api/events", "protocol": "http", "host": ["localhost"], "port": "3001", "path": ["api", "events"]}
      }
    },
    {
      "name": "Update Event (Organizer Only)",
      "request": {
        "method": "PUT",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer {{organizer_token}}"}
        ],
        "body": {"mode": "raw", "raw": "{\n  \"description\": \"Updated Tech Meetup\"\n}"},
        "url": {"raw": "http://localhost:3001/api/events/1", "protocol": "http", "host": ["localhost"], "port": "3001", "path": ["api", "events", "1"]}
      }
    },
    {
      "name": "Delete Event (Organizer Only)",
      "request": {
        "method": "DELETE",
        "header": [{"key": "Authorization", "value": "Bearer {{organizer_token}}"}],
        "url": {"raw": "http://localhost:3001/api/events/1", "protocol": "http", "host": ["localhost"], "port": "3001", "path": ["api", "events", "1"]}
      }
    },
    {
      "name": "Register for Event (Attendee)",
      "request": {
        "method": "POST",
        "header": [{"key": "Authorization", "value": "Bearer {{attendee_token}}"}],
        "url": {"raw": "http://localhost:3001/api/events/1/register", "protocol": "http", "host": ["localhost"], "port": "3001", "path": ["api", "events", "1", "register"]}
      }
    },
    {
      "name": "Get My Registered Events (Attendee)",
      "request": {
        "method": "GET",
        "header": [{"key": "Authorization", "value": "Bearer {{attendee_token}}"}],
        "url": {"raw": "http://localhost:3001/api/events/me", "protocol": "http", "host": ["localhost"], "port": "3001", "path": ["api", "events", "me"]}
      }
    }
  ]
}
